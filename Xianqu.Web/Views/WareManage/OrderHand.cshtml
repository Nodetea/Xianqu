@model IEnumerable<Xianqu.Web.Models.OrderHandViewModel>
@{
    ViewBag.Title = "OrderHand";
}

<h2>确认交易</h2>
<div class="row">
    <div class="btn-group btn-group-lg">
        <button type="button" class="btn btn-default active">待处理</button>
        <button type="button" class="btn btn-default">已处理</button>
    </div>
</div>

<div class="row">
   
    <table class="table table-striped">
        <thead>
            <tr>
            <th>订单号</th>
            <th>商品名</th>
            <th>买家</th>
            <th>订单金额</th>
            <th>交易确认</th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modleItem => item.OrderId)</td>
                <td>@Html.DisplayFor(modleItem => item.WareName)</td>
                <td>@Html.DisplayFor(modleItem => item.CustomerName)</td>
                <td>@Html.DisplayFor(modleItem=>item.Sum)</td>
                <td>@Html.DisplayFor(modleItem => item.SellerChecked)</td>
                <td>@Html.ActionLink("CheckOrder", "Finished", "WareManage")</td>
            </tr>
        }
    </table>

   
</div>
    
   
   


