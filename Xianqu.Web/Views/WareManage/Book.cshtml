@model IEnumerable<Xianqu.Web.Models.WareViewModel>

@{
    ViewBag.Title = "Book";
}

<h2>Book</h2>
<hr />
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="@item.ImageUrl" alt="图一" />
                <div class="caption">
                    <h4>@Html.DisplayFor(modelItem=>item.Name)</h4>
                    <p>@Html.DisplayFor(modelItem=>item.Price)</p>
                    <p>@Html.DisplayFor(modelItem=>item.Id)</p>
                    <p><a class="btn btn-default" href="@Url.Action("BuyWare","WareManage",new {id=item.Id})">点击购买 &raquo;</a></p>
                </div>
            </div>

        </div>
    }
</div>
